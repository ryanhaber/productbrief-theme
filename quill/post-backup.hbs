{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<!-- start post -->
{{#post}}
<section class="content-area">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="post post-single">
					{{#if feature_image}}
					<div class="featured-image single" style="background-image: url({{feature_image}})">
					</div>
					{{/if}}
					<div class="small-container">
						{{#if tags}}
		                <div class="category">
		                	{{tags separator=" "}}
		                </div>
		                {{/if}}
						<h1 class="title">{{title}}</h1>
						<div class="post-meta">
							{{#foreach authors}}
				                <a class="author" href="{{url}}">
									{{#if profile_image}}
				                	<img src="{{profile_image}}" alt="{{name}}" class="avartar">
				                	{{/if}}
				                	<span class="name">{{name}}</span>
				                </a>
							{{/foreach}}
							- <time class="date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
						</div>
						<div class="post-content">
							{{#if access}}
							{{content}}
							{{else}}
							<div class="excerpt">
							{{excerpt}}
							</div>
							<div class="no-access-message">
								{{t "You don't have access to this post on"}} <strong>{{@site.title}}</strong> {{t "at the moment, but if you upgrade your account you'll be able to see the whole thing, as well as all the other posts in the archive! Subscribing only takes a few seconds and will give you immediate access."}}
							</div>
							<div class="post-upgrade-cta-box text-center">
								{{#if @member}}
								<h2 class="h3 cta-title">{{t "This post is for paying subscribers only"}}</h2>
								{{else}}
								<h2 class="h3 cta-title">{{t "This post is for subscribers only"}}</h2>
								{{/if}}
								<a class="btn btn-primary" href="{{@site.url}}/signup/">{{t "Subscribe now"}}</a>
								<div class="sign-in-cta"><small>{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small></div>
							</div>
							{{/if}}
						</div>
					</div>
				</div>
				<div class=" post small-container">
					{{> share-links}}
					{{> about-author}}
					{{> prev-next}}
					{{> comment}}
				</div>
			</div>
		</div>
	</div>
</section>
