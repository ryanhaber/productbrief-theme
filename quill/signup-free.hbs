{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<!-- start post -->
<section class="content-area members-page">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="post post-single page-template">
					<div class="small-container">
                        {{#if @member.paid}}

                            {{!-- Logged in, paying member: Redirect home --}}
                            <script>window.location = '{{@site.url}}/';</script>

                        {{else if @member}}
                            {{!-- Logged in, free member: Redirect signup --}}
                            <script>window.location = '{{@site.url}}/signup/';</script>

                        {{else}}
						<h1 class="title text-center">{{t "Sign up to"}} {{@site.title}}</h1>
						<div class="post-content">
                            <div class="members-page-subtitile text-center">
                                {{t "Signup to access free membrs only articles"}}
                            </div>
                            <div class="signup-form-wrap">
                                <form class="members-form" data-members-form="signup">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input data-members-email type="email" class="form-control email" id="email" placeholder="{{t "Your email address"}}" required/>
                                            <div class="input-group-btn">
                                                <button class="form-control btn btn-primary" type="submit"><span class="loading-spinner"></span>{{t "Subscribe"}}</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="messages-wrap text-center">
                                        <div class="message-success">
                                            <strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete sign in"}}
                                        </div>
                                        <div class="message-error">
                                            <strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}
                                        </div>
                                    </div>
                                </form>
                                <p><small>{{t "Already have an account?"}} <a href="/signup/">{{t "Sign in"}}</a></small></p>
                            </div>
						</div>
                        {{/if}}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- end container -->