{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<!-- start post -->
<section class="content-area members-page">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="post post-single page-template">
					<div class="small-container">
						<h1 class="title text-center">{{t "Welcome back!"}}</h1>
						<div class="post-content">
                            <div class="members-page-subtitile text-center">
                                {{t "Sign into your account again for full access"}}
                            </div>
                            <div class="signup-form-wrap">
                                <form class="members-form" data-members-form="signin">
                                    <div class="form-group">
                                        <div class="input-group">
                                            <input data-members-email type="email" class="form-control email" id="email" placeholder="{{t "Your email address"}}" required/>
                                            <div class="input-group-btn">
                                                <button class="form-control btn btn-primary" type="submit"><span class="loading-spinner"></span>{{t "Send login link"}}</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="messages-wrap text-center">
                                        <div class="message-success">
                                            <strong>{{t "Great!"}}</strong> {{t "Check your inbox and click the link to complete sign in"}}
                                        </div>
                                        <div class="message-error">
                                            <strong>{{t "Error!"}}</strong> {{t "Please enter a valid email address!"}}
                                        </div>
                                    </div>
                                </form>
                                <p><small>{{t "Don't have an account yet?"}} <a href="/signup/">{{t "Sign up"}}</a></small></p>
                            </div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- end container -->